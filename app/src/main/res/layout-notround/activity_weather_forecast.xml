<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WeatherForecast"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/WeatherView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

        </ImageView>

        <TextView
            android:id="@+id/CurrentTempView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Current Temperature"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/MinimumTempView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Minimum Temperature"
            android:textSize="15dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/MaximumTempView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Maximum Temperature"
            android:textSize="15dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/UVRatingView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UV Rate"
            android:textSize="15dp"
            android:layout_gravity="center"/>

        <ProgressBar
            android:id="@+id/ProgressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleHorizontal"
            android:visibility="invisible">

        </ProgressBar>
    </LinearLayout>
</androidx.wear.widget.BoxInsetLayout>