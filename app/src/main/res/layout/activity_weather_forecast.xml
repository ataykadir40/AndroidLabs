<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WeatherForecast"
    android:orientation="vertical">
    
    <ImageView
        android:id="@+id/WeatherView"
        android:layout_width="200dp"
        android:layout_height="200dp">

    </ImageView>

    <TextView
        android:id="@+id/CurrentTempView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Temperature"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/MinimumTempView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Minimum Temperature"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/MaximumTempView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maximum Temperature"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/UVRatingView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UV Rate"
        android:textSize="20dp" />

    <ProgressBar
        android:id="@+id/ProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyleHorizontal"
        android:visibility="invisible">

    </ProgressBar>


</LinearLayout>